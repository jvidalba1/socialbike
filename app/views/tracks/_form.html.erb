<%= form_for @track, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gpx_file_name, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gpx_file_name, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gpx_content_type, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :gpx_content_type, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gpx_file_size, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :gpx_file_size, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :gpx_updated_at, :class => 'control-label' %>
    <div class="controls">
      <%= f.datetime_select :gpx_updated_at, :class => 'datetime_select' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                tracks_path, :class => 'btn' %>
  </div>
<% end %>
