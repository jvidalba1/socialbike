<table class="profile" summary="Profile information">
  <%= gravatar_for @user, :size => 150 	%>
  <tr>
    <td>
      <h1>
        <%= @user.name %>
      </h1>
    </td>
    <td class ="sidebar round" >
      <strong>
        Nombre
      </strong>
      <%= @user.name%>
      <br>
      <strong>
        URL
      </strong>
      <%= link_to user_path(@user), "/users/#{@user.id}"%>
      <br>
      <strong>
        Email
      </strong>
      <%= @user.email %>
      <br>
      <% if current_user?(@user) %>
        <%= link_to "Editar informacion", edit_user_path(@user) %>
          <br>
        <a href="http://gravatar.com/emails/" target=_blank> Cambiar foto</a><br>
        <%= link_to "Nuevo evento", new_event_path %>
      <% end %>
    </td>
    </tr>
</table>


<table id="table_event" class="table">
  <tr>
    <td></td>
    <td><h2>Eventos (<%= @user.events.count %>)</h2></td>
    <td></td>
  </tr>
  <tr class="table_head">
    <td>Nombre</td>
    <td>Creacion</td>
    <td colspan="2">Opciones</td>
  </tr>
    <% @events.each do |event| %>
  <tr class="table_body">
            <td>
              <%= event.name %>
            </td>
            <td>
                Posted <%= time_ago_in_words(event.created_at) %> ago.
            </td>
   <td>
    <div class="button_group">
      <ul>
        <li><%= link_to "Ver",  "#", :class => "minibutton"%></li>
        <li><%= link_to "Editar", "#", :class => "minibutton" %></li>
        <li><%= link_to "Cancelar", "#", :method => :delete, :confirm => "¿Esta seguro?", :class => "minibutton_danger" %></li>
      </ul>
    </div>
   </td>
  </tr>

    <% end %>
  <tr>
    <td colspan="3"><%= will_paginate @events %></td>
  </tr>
</table>

