<table class="profile" summary="Profile information" border=1>
  <%= gravatar_for @user, :size => 150 	%>
  <tr>
    <td>
      <h1>
        <%= @user.name %>
      </h1>
    </td>
    <td class ="sidebar round" >
      <strong>
        Nombre
      </strong>
      <%= @user.name%>
      <br>
      <strong>
        URL
      </strong>
      <%= link_to user_path(@user), "/users/#{@user.id}"%>
      <br>
      <strong>
        Email
      </strong>
      <%= @user.email %>
      <br>
      <% if current_user?(@user) %>
        <%= link_to "Editar informacion", edit_user_path(@user) %>
          <br>
        <a href="http://gravatar.com/emails/" target=_blank> Cambiar foto</a>

      <% end %>
    </td>
    </tr>
</table>

<h2>Eventos (<%= @user.events.count %>)</h2>
<table class="table">
  <tr class="table_head">
    <td>Nombre</td>
    <td>Creacion</td>
    <td colspan="2">Opciones</td>
  </tr>
<% @events.each do |event| %>
  <tr class="table_body">
            <td>
              <%= event.name %>
            </td>
            <td>
                Posted <%= time_ago_in_words(event.created_at) %> ago.
            </td>
   <td>
    <div class="button_group">
      <ul>
        <li><%= link_to "Ver",  "#", :class => "minibutton"%></li>
        <li><%= link_to "Editar", "#", :class => "minibutton" %></li>
        <li><%= link_to "Cancelar", "#", :method => :delete, :confirm => "Â¿Esta seguro?", :class => "minibutton_danger" %></li>
      </ul>
    </div>
   </td>
  </tr>
<% end %>
</table>
<%= will_paginate @events %>
