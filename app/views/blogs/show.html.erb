<section class="section_perfil_event">
  <table>
    <tr>
      <td rowspan="4" class="foto_events_new">
        <a href="<%= user_path(@current_user) %>">
          <%= gravatar_for @current_user, :size => 80 %>
        </a>
      </td>
    </tr>
    <tr>
      <td>
        <h2 class="nombre_enew">
          <%= @current_user.name %>
        </h2>
      </td>
    </tr>
    <tr>
      <td>
        <span>
            <%= link_to "Ver mi perfil", @current_user %>
        </span>
      </td>
    </tr>
    <tr>
      <td>
            <span>
                <%= pluralize(@current_user.events.count, "event") %>
            </span>
      </td>
    </tr>
  </table>
</section>

<section class="show_event">
  <table class="table_show_event">
    <tr>
      <td><h2>Nombre</h2></td>
      <td><%= @blog.name %></td>
    </tr>

    <tr>
      <td><h2>Contenido</h2></td>
      <td><%= @blog.content %></td>
    </tr>

  </table>
  <%= link_to "Editar", edit_blog_path(@blog), :class => "btn btn-large btn-primary"  %>
  <%= link_to "Regresar", @current_user, :class => "btn btn-large btn-primary"  %>
</section>

<section class="blog_comments">
  <!--<h2><%# link_to "Comentarios("+@blog.comments.count.to_s+")", new_blog_comment_path(@blog) %></h2>-->

  <h2>Comentarios(<%= @blog.comments.count %>)</h2>

  <%= form_for [@blog, @comment] do |f| %>
      <div class="field">
        <%= f.label :content, "Comentario" %><br />
        <%= f.text_area :content %>
      </div>
      <p><%= f.submit %></p>
  <% end %>
</section>
